@model IdentityServer.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>

<div>
    <table>
        <tr>
            <th></th>
        </tr>
        @foreach (Scope app in ViewBag.Scopes)
        {
            <tr>
                <td>@app.Application.Name</td>
            </tr>
            <tr>
                <td>@Html.Label(app.Application.Name, @app.Application.Name)</td>
            </tr>
        }
    </table>
   
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClientId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
